<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/carback5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/paybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Confirm"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/seekBar2"
        style="@android:style/Widget.SeekBar"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvhours"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:max="10"
        android:progress="3" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@android:style/Widget.SeekBar"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/seekBar2"
        android:layout_below="@+id/masa"
        android:layout_marginTop="19dp"
        android:max="10"
        android:progress="3" />

    <TextView
        android:id="@+id/timeselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Time Select"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timeselect"
        android:text="Select your parking duration and click confirm."
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:text="*Minimum duration is 15 minutes"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvhours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="26dp"
        android:text="Hours:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/masajam"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar2"
        android:layout_alignEnd="@+id/timeselect"
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/masa"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignStart="@+id/masajam"
        android:textColor="@color/yellow" />

    <TextView
        android:id="@+id/jumlahjam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toEndOf="@+id/masa"
        android:background="@color/silver"
        android:textColor="@color/fuchsia" />

    <TextView
        android:id="@+id/jumlahmasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toEndOf="@+id/textView22"
        android:background="@color/silver"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/latestbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toEndOf="@+id/textView23"
        android:background="@color/silver"
        android:textColor="@color/aqua" />

    <TextView
        android:id="@+id/jumlahbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView14"
        android:layout_toEndOf="@+id/textView18"
        android:background="@color/silver"
        android:textColor="@color/lime" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seekBar2"
        android:layout_marginTop="36dp"
        android:text="Minutes:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView13"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="35dp"
        android:text="Total Duration:"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="16dp"
        android:text="Current Credit:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView12"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="18dp"
        android:text="Total Price Deduct:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView13"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="11dp"
        android:text="Credit Balance:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/jumlahjam"
        android:layout_alignBottom="@+id/jumlahjam"
        android:layout_toEndOf="@+id/jumlahjam"
        android:background="@color/silver"
        android:text="Hours"
        android:textColor="@color/fuchsia" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView14"
        android:layout_alignStart="@+id/jumlahjam"
        android:background="@color/silver"
        android:text="RM"
        android:textColor="@color/lime" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignStart="@+id/textView18"
        android:background="@color/silver"
        android:text="RM"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignStart="@+id/textView22"
        android:background="@color/silver"
        android:text="RM"
        android:textColor="@color/aqua" />


</RelativeLayout>