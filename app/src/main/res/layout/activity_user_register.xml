<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/carback2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/agree"
        android:layout_toStartOf="@+id/agree"
        android:textColor="@android:color/background_light"
        android:visibility="visible" />

    <TextView
        android:id="@+id/passwordreg"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/emailreg"
        android:layout_below="@+id/emailreg"
        android:layout_marginTop="44dp"
        android:text="Password :"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userregister"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="User Registration"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/confirmreg"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/passwordreg"
        android:layout_below="@+id/passwordreg"
        android:layout_marginTop="44dp"
        android:text="Re-Password :"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailreg"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userregister"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Email         :"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:background="@color/silver"
        android:text="SignUp" />

    <EditText
        android:id="@+id/emailregtext"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/emailreg"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/emailreg"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/repasswordregtext"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/passwordregtext"
        android:layout_alignTop="@+id/confirmreg"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/passwordregtext"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/emailregtext"
        android:layout_alignTop="@+id/passwordreg"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/agree"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_above="@+id/nextbutton"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:text="“I have read and agree to the Terms”"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/detail"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button4"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nextbutton"
        android:layout_alignParentTop="true"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/repasswordregtext"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:cursorVisible="false"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        android:visibility="gone" />



</RelativeLayout>