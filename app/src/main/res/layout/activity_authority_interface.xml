<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/carback2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/authdetail123"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/status123"
        android:layout_below="@+id/status123"
        android:layout_marginTop="27dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/authstatus123"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authregisterlink"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/authpaswordfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/authemailfield"
        android:layout_below="@+id/authemailfield"
        android:layout_marginTop="32dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/authloginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authpaswordfield"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Login" />

    <Button
        android:id="@+id/authregisterlink"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/authloginbutton"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:text="Don't have account? Register.."
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/authregister"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="AUTHORITY LOGIN"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/authemailfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authregister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="visible" />


</RelativeLayout>